<div class="container">
  <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1502819126416-d387f86d47a1?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=09f8419d4dfe16155bb399f0e7ea2069&auto=format&fit=crop&w=2689&q=80n');">
    <div class="banner-content">
      <h1>Cocktail Lovers</h1>
      <p><%= link_to "Add a cocktail", new_cocktail_path %></p>
    </div>
  </div>

  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
          <%= image_tag cocktail.picture, class: "picture_cocktail"%>
          <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
        </div>
      </div>
    <% end %>
  </div>
</div>

